<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<RootNamespace>CrudGeneratorCli</RootNamespace>
		<AssemblyName>CrudGeneratorCli</AssemblyName>
		<PackageId>CrudGeneratorCli</PackageId>
		<Version>1.1.0</Version>
		<Authors>Ahmed Kouki</Authors>
		<Description>A tool for generating CRUD code</Description>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/koukiahmed668/CrudGenerator-ASP-NET-CORE</RepositoryUrl>
		<IsPackable>true</IsPackable>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<ToolCommandName>crudgen</ToolCommandName>
		<PackAsTool>true</PackAsTool>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Http" Version="9.0.1" />
		<PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
		<PackageReference Include="System.CommandLine.NamingConventionBinder" Version="2.0.0-beta4.22272.1" />
	</ItemGroup>

</Project>
